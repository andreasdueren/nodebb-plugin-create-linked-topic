{
  "id": "nodebb-plugin-create-linked-topic",
  "name": "Create Linked Topic Helper",
  "description": "Helper endpoint to create NodeBB blog comments topics from external sites",
  "version": "1.1.2",
  "library": "./library.js",
  "hooks": [
    {
      "hook": "static:app.load",
      "method": "init"
    },
    {
      "hook": "filter:topic.get",
      "method": "addSpeciesCard"
    },
    {
      "hook": "filter:parse.post",
      "method": "replaceSpeciesCard"
    },
    {
      "hook": "action:topic.delete",
      "method": "onTopicDelete"
    }
  ],
  "scripts": [
    "static/species-card.js"
  ]
}
